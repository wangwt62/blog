<h1>Articles List</h1>
<%= render 'menu' %>
<% if @articles.count > 0 %>
	<table>
		<tr>
			<th>Title</th>
			<th>Content</th>
			<th colspan='3'><th>
		</tr>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.content %></td>
			<td><%= link_to 'Show', article %></td>
			<td><%= link_to 'Edit', edit_article_path(article) %></td>
			<td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}  %></td>
		</tr>
		<% end %>
	</table>
<% end %>
